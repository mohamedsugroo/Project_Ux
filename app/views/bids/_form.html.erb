<%= form_for([@job, @bid]) do |form| %>
  <% if bid.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(bid.errors.count, "error") %> prohibited this bid from being saved:</h2>

      <ul>
      <% bid.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :hourly_rate %>
    
    <a tabindex="0" class="popover-dismiss" role="button" data-toggle="popover" data-trigger="focus" title="Dismissible popover" data-content="And here's some amazing content. It's very engaging. Right?">
      <i class="fas fa-info-circle"></i>
    </a>


    <%= form.text_field :hourly_rate, id: :bid_hourly_rate, class: "form-control", 'ng-model':'hourly_rate', type: 'number', 'step':"any" %>

  </div>


  <div class="form-group">
    <%= form.label :number_of_hours %>
    <%= form.text_field :number_of_hours, id: :bid_number_of_hours, class: "form-control", 'ng-model':'number_of_hours', type: 'number' %>
  </div>


  <div class="form-group">
    <%= form.label :note %>
    <%= form.cktext_area :note, id: :bid_note, class: "form-control" %>
  </div>


  <div class="actions">
    <%= form.submit "Submit Proposal", class: 'btn btn-success btn-lg' %>
  </div>
<% end %>


<script>
  $('.popover-dismiss').popover({
    trigger: 'focus'
  })
</script>