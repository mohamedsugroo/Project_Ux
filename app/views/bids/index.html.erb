<p id="notice"><%= notice %></p>

<h1>Bids</h1>

<table>
  <thead>
    <tr>
      <th>Hourly rate</th>
      <th>Number of hours</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bids.each do |bid| %>
      <tr>
        <td><%= bid.hourly_rate %></td>
        <td><%= bid.number_of_hours %></td>
        <td><%= bid.note %></td>
        <td><%#= link_to 'Show', bid %></td>
        <td><%#= link_to 'Edit', edit_bid_path(bid) %></td>
        <td><%#= link_to 'Destroy', bid, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

