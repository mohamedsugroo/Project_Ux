<% @people.each do |person| %>
    <%= person.first_name %>
    <%= person.middle_name %>
    <%= person.last_name %>

    <%= person.post_code %>
    <%= person.utr %>
    <%= person.mobile_number %>
    <%= person.home_number %>
    <%= person.car_owner %>
    <%= link_to 'Show', person_path(person) %>
    <%= link_to 'Edit', edit_person_path(person) %>
    <%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
