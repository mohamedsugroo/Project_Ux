<br>

<button  class="btn btn-primary" data-toggle="modal" data-target="#verificationstatus" data-whatever="@mdo" >
	Verification Status
</button>



<div class="modal fade" id="verificationstatus" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content card">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Update Verification Status</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <%= form_for Constatus.new do |f| %>

      <div class="modal-body">

      	<div class="form-group">
			<%= f.text_field :person_id, value: @user.person.id, type: 'hidden' %>
		</div>
		<div class="form-group">
			<%= f.label :verification_id, 'Status' %>
			<%= f.collection_select :verification_id, Verification.all, :id, :name, {promt: 'Choose a Verification'}, id: :verification_selector, class: "form-control form-control-lg" %>
		</div>
		<div class="form-group">
			<%= f.label :note %>
			<%= f.text_area :note, class: 'form-control' %>
		</div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
		<%= f.submit 'Update Status', class: 'btn btn-success'%>
      </div>

      <% end %>

    </div>
  </div>
</div>